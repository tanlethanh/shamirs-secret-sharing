{
  "name": "@tanle/shamirs-secret-sharing",
  "version": "0.0.1",
  "description": "A JS/TS implementation of Shamir's Secret Sharing in a finite field GF(2^8)",
  "repository": {
    "url": "https://github.com/tanlethanh/shamirs-secret-sharing.git"
  },
  "files": [
    "src",
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "example:sss-28": "tsx ./examples/sss-28.ts",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build": "rimraf ./dist && tsc && yarn build:cjs && yarn build:esm",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-typescript": "^7.24.7",
    "@peakee/eslint-config": "^0.0.17",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.4",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.0",
    "typescript": "5.3.3"
  },
  "jest": {
    "testMatch": ["**/src/**/*.test.ts"]
  },
  "author": "Tan Le",
  "license": "ISC",
  "packageManager": "yarn@4.4.1"
}
